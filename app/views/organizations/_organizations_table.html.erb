<div class="card">
  <div class ="card-header d-flex justify-content-between">
    <h5 class="card-title m-0 p-0">List of Organizations</h5>
    <div>
      <%= link_to "New Organization", new_organization_path, class: "btn btn-primary btn-sm" %>
    </div>
  </div>
  <div class="card-body">
    <!-- Default Table -->
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Created At</th>
        </tr>
      </thead>
      <tbody>
        <%= render @organizations %>
      </tbody>
    </table>
    <!-- End Default Table Example -->
  </div>
</div>