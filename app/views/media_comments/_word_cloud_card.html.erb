<div class="card">
  <div class ="card-header d-flex justify-content-between">
    <h5 class="card-title m-0 p-0">Word Cloud Analisys Result</h5>
    <%= link_to 'Export', export_word_cloud_campaign_path(@campaign, format: :csv), class: 'btn btn-primary' %>
  </div>
  <div class="card-body">
    <div class="text-center mt-3">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="word-cloud-tab" data-bs-toggle="tab" data-bs-target="#word-cloud" type="button" role="tab" aria-controls="word-cloud" aria-selected="true">Word Cloud</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab" aria-controls="details" aria-selected="false">Details</button>
        </li>
      </ul>
    </div>
    <div class="text-center mt-n1">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="word-cloud" role="tabpanel" aria-labelledby="word-cloud-tab"><%= image_tag(@campaign.word_cloud_image, class: '') %></div>
        <div class="tab-pane fade" id="details" role="tabpanel" aria-labelledby="details-tab">
          <table class="table">
            <thead>
              <tr><th>Word</th><th>Count</th></tr>
            </thead>
            <% @campaign.sorted_word_cloud.each do |word,count| %>
              <tr><td><%= word %></td><td><%= count %></td></tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>



