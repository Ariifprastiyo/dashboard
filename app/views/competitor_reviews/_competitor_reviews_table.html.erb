<div class="card">
  <div class ="card-header d-flex justify-content-between">
    <h5 class="card-title m-0 p-0">List of Competitor Review</h5>
    <div>
      <% if policy(:competitor_review).new? %>
        <%= link_to "New Competitor Review", new_competitor_review_path, class: "btn btn-primary btn-sm" %>
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <!-- Default Table -->
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Organization</th>
          <th scope="col">Title</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @competitor_reviews %>
      </tbody>
    </table>
    <!-- End Default Table Example -->
  </div>
</div>