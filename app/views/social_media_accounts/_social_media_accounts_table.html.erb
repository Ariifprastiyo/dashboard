<table class="table table-striped table-hover">
  <thead class="table-primary">
    <tr>
      <th colspan="5"></th>
      <th colspan="4" class="text-center">Estimated</th>
      <th colspan="2" class="text-center">Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <th></th>
      <th>Username</th>
      <th>Platform</th>
      <th>Follower</th>
      <th>Size</th>
      <th>Views</th>
      <th>ER</th>
      <th>ERB</th>
      <th>Reach</th>
      <th>Story</th>
      <th>Feed</th>
      <th>Categories</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @social_media_accounts.each do |account| %>
    <tr>
      <td class="align-middle"><%= image_tag url_for(account.profile_picture.variant(:thumb)), class: 'rounded-circle' %></td>
      <td class="align-middle"><%= link_to_social_media_account(account.username, account.platform) %>
      <td class="align-middle text-center"><%= tag :i, class: "bi bi-#{account.platform}" %></td>
      <td class="align-middle"><%= number_with_delimiter account.followers %></td>
      <td class="align-middle"><%= account.size %></td>
      <td class="align-middle"><%= number_with_delimiter account.estimated_impression.to_i, locale: :id %></td>
      <td class="align-middle"><%= number_to_percentage account.estimated_engagement_rate, precision: 2 %></td>
      <td class="align-middle"><%= number_to_percentage account.estimated_engagement_rate_branding_post, precision: 2 %></td>
      <td class="align-middle"><%= number_with_delimiter account.estimated_reach.to_i %></td>
      <td class="align-middle"><%= number_with_delimiter account.story_price.to_i %></td>
      <td class="align-middle"><%= number_with_delimiter account.feed_photo_price.to_i %></td>
      <td class="align-middle">
        <%= badges_for(account.categories.map { |cat| cat.name }) %>
      </td>
      <td>
        <%= icon_link_to('pencil-square', edit_influencer_social_media_account_path(account.influencer, account)) %>
      <td>
    </tr>
  <% end %>
  </tbody>
</table>