<div class="pagetitle">
  <h1>Bulk Influencer <%= @bulk_influencer.id %></h1>
</div>

<section class="section">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body pt-2 pb-2">
          <table class="table">
            <tr>
              <th>
                Progress
              </th>
              <td>
                <%= show_progress @bulk_influencer.current_row, @bulk_influencer.total_row %>
              </td>
            </tr>
            <tr>
              <th>
                Processed Records
              </th>
              <td>
                <%= @bulk_influencer.current_row %>
              </td>
            </tr>
            <tr>
              <th>
                Total Error
              </th>
              <td>
                <%= @bulk_influencer.total_error %>
              </td>
            </tr>
            <tr>
              <th>Error Messages</th>
              <td>
              <% if @bulk_influencer.error_messages.present? %>
                <ul>
                <% @bulk_influencer.error_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              <% end %>
              </td>
            </tr>
            <tr>
              <th>Job ID</th>
              <td>
                <%= @bulk_influencer.job_id %>
              </td>
            </tr>
            <tr>
              <th>Uploaded File</th>
              <td>
                <%= link_to 'Download', download_uploaded_file_bulk_influencer_path(@bulk_influencer) %>
              </td>
            </tr>
            <tr>
              <th>Cancellation At</th>
              <td>
                <%= @bulk_influencer.cancelled_at %>
              </td>
            </tr>
            <tr>
              <th>
                Created At
              </th>
              <td>
                <%= @bulk_influencer.created_at %>
              </td>
            </tr>
            <tr>
              <th>
                Updated At
              </th>
              <td>
                <%= @bulk_influencer.updated_at %>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
  
</section>
