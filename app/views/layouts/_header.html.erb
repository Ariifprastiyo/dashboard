<!-- ======= Header ======= -->
<header id="header" class="header fixed-top d-flex align-items-center">
  <div class="d-flex align-items-center justify-content-between">
    <a href="/" class="logo d-flex align-items-center">
    <% if OrganizationSetting.first&.logo&.attached? %>
        <%= image_tag OrganizationSetting.first.logo, {class: 'img-fluid w-60'} %>
    <% elsif current_user.organization&.logo&.attached? %>
      <%= image_tag current_user.organization.logo, {class: 'img-fluid w-60'} %>
    <% else %>
      <%= image_tag('logos/Mediarumu-04.png') %>
    <% end %>
    </a>
    <i class="bi bi-list toggle-sidebar-btn"></i>
  </div><!-- End Logo -->

  <nav class="header-nav ms-auto">
    <ul class="d-flex align-items-center">
      <li class="nav-item dropdown pe-3">

        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
          <%= image_tag current_user.gravatar_url, alt: "Profile", class: "rounded-circle" %>
          <span class="d-none d-md-block dropdown-toggle ps-2"><%= current_user.name %></span>
        </a><!-- End Profile Iamge Icon -->

        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
          <li class="dropdown-header">
            <h6><%= current_user.name %></h6>
            <span><%= current_user.roles.collect(&:name) %></span>
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>

          <li>
            <%= link_to edit_account_path, class: "dropdown-item d-flex align-items-center" do %>
              <i class="bi bi-gear"></i>
              <span>Account Settings</span>
            <% end %>
          </li>
          <% if current_user.has_role?(:admin) and OrganizationSetting.first.present? %>
          <li>
            <%= link_to edit_organization_setting_path(OrganizationSetting.first), class: "dropdown-item d-flex align-items-center" do %>
              <i class="bi bi-gear"></i>
              <span>Organization Settings</span>
            <% end %>
          </li>
          <% end %>
          <li>
            <hr class="dropdown-divider">
          </li>

          <li>
            <%= link_to destroy_user_session_path, class: 'dropdown-item d-flex align-items-center', data: { turbo_method: :delete} do %>
              <i class="bi bi-box-arrow-right"></i>
              <span>Sign Out</span>
            <% end %>
          </li>

        </ul><!-- End Profile Dropdown Items -->
      </li><!-- End Profile Nav -->

    </ul>
  </nav><!-- End Icons Navigation -->

</header><!-- End Header -->