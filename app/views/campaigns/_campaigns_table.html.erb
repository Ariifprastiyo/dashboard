<div class="card">
  <div class ="card-header d-flex justify-content-between">
    <h5 class="card-title m-0 p-0"><%= local_assigns[:title] || 'List of campaigns' %></h5>
    <div>
    <% if policy(:campaign).new? %>
      <%= link_to "New Campaign", new_campaign_path, class: "btn btn-primary btn-sm" unless local_assigns[:hide_new_campaign_link] %>
    <% end %>
    </div>
  </div>
  <div class="card-body">
    <!-- Default Table -->
    <table class="table table-striped table-hover mt-3">
      <thead class="table-primary">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Platform</th>
          <th scope="col">Brand</th>
          <th scope="col">Period</th>
          <th scope="col">Status</th>
          <th scope="col">Reach</th>
          <th scope="col">Views</th>
          <th scope="col">ER</th>
        </tr>
      </thead>
      <tbody>
        <%= render campaigns %>
      </tbody>
    </table>
    <!-- End Default Table Example -->
  </div>
</div>