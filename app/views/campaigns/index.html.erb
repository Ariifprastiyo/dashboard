<div class="pagetitle">
  <h1>Campaign management</h1>
</div>

<section class="section">
  <div class="row">
    <div class="col-lg-12">
      <%= render 'campaigns_table', campaigns: @campaigns.active, title: "ACTIVE campaigns" %>
      <%= render 'campaigns_table', campaigns: @campaigns.draft,
                                    hide_new_campaign_link: true, title: "DRAFT campaigns" %>
      <%= render 'campaigns_table_in_collapse', campaigns: @campaigns.completed, title: "COMPLETED campaigns"%>
    </div>
  </div>
</section>
