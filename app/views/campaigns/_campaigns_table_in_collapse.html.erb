<div class="card">
  <div class ="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title m-0 p-0">
      <%= link_to local_assigns[:title], '#campaigns-collapse-table', data: { 'bs-toggle': 'collapse' } %> 
    </h5>
    <%= link_to 'Toggle campaigns', '#campaigns-collapse-table', class: 'btn btn-primary btn-sm', data: { 'bs-toggle': 'collapse' } %>
  </div>
  <div class="card-body collapse" id="campaigns-collapse-table">
    <!-- Default Table -->
    <table class="table table-striped table-hover mt-3">
      <thead class="table-primary">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Platform</th>
          <th scope="col">Brand</th>
          <th scope="col">Period</th>
          <th scope="col">Status</th>
          <th scope="col">Reach</th>
          <th scope="col">Views</th>
          <th scope="col">ER</th>
        </tr>
      </thead>
      <tbody>
        <%= render campaigns %>
      </tbody>
    </table>
    <!-- End Default Table Example -->
  </div>
</div>