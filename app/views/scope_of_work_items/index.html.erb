<div class="pagetitle">
  <h1>Manage Publication for : <strong>@<%= link_to @social_media_account.username, @social_media_account.platform_url, target: '_blank' %></strong></h1>
</div>

<%= render 'shared/breadcrumbs' %>

<section class="section">

  <div class="row">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Scope of work items</h5>

        <table class="table">
          <thead>
            <tr>
              <th>Scope of work</th>
              <th>Price</th>
              <th>Scheduled</th>
              <th>Post date</th>
              <% if policy(:scope_of_work_item).edit? %>
              <th>Action</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @scope_of_work_items.each do |scope_of_work_item| %>
              <tr>
                <td><%= scope_of_work_item.name.humanize %></td>
                <td><%= scope_of_work_item.price %></td>
                <td><%= scope_of_work_item.scheduled_at.try { to_fs(:day_month_year_short) } %></td>
                <td><%= scope_of_work_item.posted_at.try { to_fs(:day_month_year_short) } %></td>
                <% if policy(:scope_of_work_item).edit? %>
                <td><%= link_to "manage", edit_scope_of_work_scope_of_work_item_path(@scope_of_work, scope_of_work_item) %> </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>