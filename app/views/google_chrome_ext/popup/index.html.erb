      <%= hidden_field_tag :tiktok_username, @tiktok_username %>
      <%= hidden_field_tag :tiktok_video_id, @tiktok_video_id %>
      <%= submit_tag "Import TikTok Account âœ¨", class: "btn btn-primary", id: 'import-button' %>
    <% end %>
