<%= bootstrap_form_for(@user, url: update_password_user_path, method: :put, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9", html: { autocomplete: "off" }) do |f| %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  <%= f.primary "Update password" %>
<% end %>