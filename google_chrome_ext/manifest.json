{
  "manifest_version": 3,
  "name": "Your Web App Companion",
  "version": "1.0",
  "description": "A companion extension for your web app",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://dashboard.mediarumu.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://dashboard.mediarumu.com/"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
